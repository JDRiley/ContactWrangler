<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.sirvigorous.ladywrangler"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="16"
        android:targetSdkVersion="16" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.sirvigorous.ladywrangler.LadyListActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.sirvigorous.ladywrangler.LadyDetailActivity"
            android:label="@string/title_lady_detail"
            android:parentActivityName="com.sirvigorous.ladywrangler.LadyListActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.sirvigorous.ladywrangler.LadyListActivity" />
        </activity>
    </application>

</manifest>
